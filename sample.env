# Basic configuration for the music bot
API_ID=123456 # Get from my.telegram.org
API_HASH=abcdef1234567890abcdef1234567890 # Get from my.telegram.org
BOT_TOKEN=1234567890:ABCDEFghijklmnopqrstuvwxyz # Get from @BotFather
DURATION_LIMIT=60 # in minutes (default: 60)
ASSISTANT_PREFIX=! # prefix for assistant commands (!play, !skip etc)

# MongoDB for storing user data and playlists
MONGO_DB_URI=mongodb+srv://username:password@cluster.mongodb.net/himanshi_music_bot?retryWrites=true&w=majority

# Bot sudo users (bot admins)
SUDO_USERS=1234567890 987654321 # Separate multiple IDs with space

# Bot log channel
LOG_GROUP_ID=-100123456789 # Add a minus before channel ID

# Music downloader settings
MUSIC_BOT_NAME=HIMANSHI_MUSIC_BOT
OWNER_ID=1234567890 # Your Telegram ID

# Spotify integration (optional)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Start message
START_IMG=https://te.legra.ph/file/image.jpg
SUPPORT_CHANNEL=https://t.me/SANATANI_TECH
SUPPORT_GROUP=https://t.me/SANATANI_SUPPORT

# Bot settings
HEROKU_API_KEY=your_heroku_api_key
HEROKU_APP_NAME=your_heroku_app_name

# Bot behavior
AUTO_LEAVE_ASSISTANT_TIME=5400 # in seconds (default: 5400 = 1.5 hours)
AUTO_SUGGESTION_TIME=5400 # in seconds
AUTO_DOWNLOADS_CLEAR=True # clear downloads after playing
AUTO_SUGGESTION_MODE=True # suggest songs after current song ends
PRIVATE_BOT_MODE=False # if True, only sudo users can use the bot
YOUTUBE_EDIT_SLEEP=3 # in seconds
TELEGRAM_EDIT_SLEEP=5 # in seconds

# Language
LANGUAGE=en # en, hi, etc
